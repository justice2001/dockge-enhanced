{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "strict": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "backend/**/*",
        "common/**/*",
        "frontend/**/*"
    ]
}
